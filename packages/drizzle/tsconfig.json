{
  "extends": "../typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
  
}
